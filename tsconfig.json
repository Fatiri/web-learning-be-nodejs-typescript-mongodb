{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "noImplicitAny": true,
      "pretty": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "./build",
      "baseUrl": "./src",
      "paths": {
          "*": [
              "node_modules/*"
          ]
      }
  },
  "include": [
      "src/**/*"
  ],
  "exclude": [
      "node_modules"
  ]
}